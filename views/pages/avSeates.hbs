<div class="container">
  {{> header}}
    <H3>{{viewTitle}} for {{show}}</H3>
    <div class="jumbotron">
        <form class="form-horizontal" method="POST" action="/ticket/booking">
        <input type="hidden" id="showNo" name="showNo" value={{show}}>
            {{#each s}}
                <div class="form-check form-check-inline">
                <input class="form-check-input" name={{this}} type="checkbox" id="availSeats">
                    <label class="form-check-label" for="availSeats">
                        {{this}}
                    </label>
                </div>
            {{/each}}
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-8">
                    <button type="submit" class="btn btn-default">Book your Seat</button>
                </div>
            </div>
        </form>
    </div>
  {{> footer}}
</div>